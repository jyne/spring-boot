<?xml version="1.0" encoding="UTF-8"?>
<system customerName="opensource" modelVersion="2015" name="spring-boot"
    projectCode="M0000-0000"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://intern.sig.nl/software-improvers/schemas/scope.xsd">
    <scope srcDir="./">
        <exclude pattern=".*/spring-boot-samples/.*"/>
        <exclude pattern=".*/spring-boot-docs/.*"/>
        <exclude pattern=".*/samples/.*"/>
        <exclude pattern=".*/test-samples/.*"/>
        <components depth="1"/>
        <language name="Batch">
            <source overrideDefaultFilters="false"/>
        </language>
        <language name="Css">
            <source overrideDefaultFilters="false"/>
            <test overrideDefaultFilters="false"/>
        </language>
        <language name="Groovy">
            <source overrideDefaultFilters="false"/>
            <test overrideDefaultFilters="false"/>
        </language>
        <language name="Html">
            <source overrideDefaultFilters="false"/>
            <test overrideDefaultFilters="false"/>
        </language>
        <language name="Java">
            <source overrideDefaultFilters="false"/>
            <test overrideDefaultFilters="false"/>
        </language>
        <language name="Mysql">
            <source overrideDefaultFilters="false"/>
            <test overrideDefaultFilters="false"/>
        </language>
        <language name="Ruby">
            <source overrideDefaultFilters="false"/>
        </language>
        <language name="Velocity">
            <source overrideDefaultFilters="false"/>
            <test overrideDefaultFilters="false"/>
        </language>
        <language name="Xml">
            <source overrideDefaultFilters="false">
                <exclude pattern=".*/[.]settings-template[.]xml"/>
                <exclude pattern=".*/eclipse-code-formatter[.]xml"/>
            </source>
            <test overrideDefaultFilters="false">
                <include pattern=".*/spring-boot-integration-tests/.*[.]xml"/>
            </test>
        </language>
        <language name="Xslt">
            <source overrideDefaultFilters="false"/>
        </language>
    </scope>
</system>
